<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="RWPAccessoryMakeableBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>
  <!-- Pocket Watch -->
  <ThingDef ParentName="RWPAccessoryMakeableBase">
    <defName>RWP_Apparel_Pocketwatch</defName>
    <description>A charming little watch, useful for keeping time. Watches are difficult to make and hard to come by, so they sell for a good price.</description>
    <label>Pocketwatch</label>
    <recipeMaker>
      <researchPrerequisite>RWP_Watchmaking</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Accessories/Display/Pocketwatch</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>0.05</generateCommonality>
    <!-- SHUT MY MOUTH AND SLAP MY GRANDMA! IT NOW ACCEPTS STUFF!! -->
    <costStuffCount>15</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      
      <!-- Support for Mod Stuff -->
      <li>AB_ExoticMetals</li>
      <li>Plastic</li>
      <li>Composite</li>
    </stuffCategories>
    <costList>
      <Gold>5</Gold>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <Mass>0.05</Mass>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>25000</WorkToMake>
      <Beauty>5</Beauty>
      <EquipDelay>0.7</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MentalBreakThreshold>-0.1</MentalBreakThreshold>
      <WorkSpeedGlobal>0.05</WorkSpeedGlobal>
      <SocialImpact>0.2</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Accessories/Pocketwatch/Pocketwatch</wornGraphicPath>
      <layers>
        <li>Belt</li>
      </layers>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
      <tags>
        <li>IndustrialBasic</li>
        <li>Royal</li>
        <li>RWPWesternWear</li>
        <li>RWPGentlemanWear</li>
        <li>Outlander</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
  <!-- Deputy Sheriff Badge -->
  <ThingDef ParentName="RWPAccessoryMakeableBase">
    <defName>RWP_Apparel_DeputySheriffBadge</defName>
    <label>Deputy Sheriff badge</label>
    <description>A town deputy sheriff's badge. This law enforcement badge gives the wearer an air of authority, as well as more confidence during gunfights.</description>
    <recipeMaker>
      <researchPrerequisite>RWP_LawEnforcement</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Accessories/Display/SilverSheriffBadge</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>0.01</generateCommonality>
    <tradeability>Sellable</tradeability>
    <costList>
      <Silver>15</Silver>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <Mass>0.05</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>5000</WorkToMake>
      <Beauty>1</Beauty>
      <EquipDelay>0.7</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <AimingDelayFactor>-0.02</AimingDelayFactor>
      <MentalBreakThreshold>-0.05</MentalBreakThreshold>
      <SocialImpact>0.05</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Accessories/SilverSheriffBadge/SilverSheriffBadge</wornGraphicPath>
      <layers>
        <li>Belt</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <tags>
        <!-- Support for custom Mods -->
        <li>CallOfCthulhu_TownsfolkPolice</li>
