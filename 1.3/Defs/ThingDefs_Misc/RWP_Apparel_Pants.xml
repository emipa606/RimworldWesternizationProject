  <!-- Jeans -->
  <ThingDef ParentName="ApparelloVanillaBase">
    <defName>RWP_Apparel_Jeans</defName>
    <label>jeans</label>
    <description>A pair of sturdy pants reinforced with copper rivets. Designed for working in the fields or in the mine.</description>
