<Defs>
  <!-- Stablehand Trousers -->
  <ThingDef ParentName="ApparelloVanillaBase">
    <defName>RWP_Apparel_StablehandTrousers</defName>
    <label>stablehand trousers</label>
    <description>A pair of rugged trousers with suspenders. Useful for various types of farm labor.</description>
    <recipeMaker>
      <researchPrerequisite>RWP_WesternApparel</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Bodywear/Display/Suspenders</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <Mass>0.5</Mass>
      <WorkToMake>7000</WorkToMake>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <TameAnimalChance>0.06</TameAnimalChance>
      <MentalBreakThreshold>-0.02</MentalBreakThreshold>
      <PlantWorkSpeed>0.03</PlantWorkSpeed>
    </equippedStatOffsets>
    <generateCommonality>0.5</generateCommonality>
    <apparel>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Bodywear/Suspenders/Suspenders</wornGraphicPath>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
        <li>Middle</li>
      </layers>
      <tags>
        <li>Outlander</li>
        <li>RWPWesternWear</li>
        <li>RWPBanditWear</li>
        <li>Western</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>
