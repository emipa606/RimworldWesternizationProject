<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ==================== RWP Marshal Faction  ================= -->
  <!-- ==== (Class) Marshal Core ==== -->
  <PawnKindDef Name="RWP_Class_MarshalCore" Abstract="True">
    <race>Human</race>
    <defaultFactionType>RWP_Faction_Marshal</defaultFactionType>
    <combatPower>35</combatPower>
    <initialWillRange>1~3</initialWillRange>
    <initialResistanceRange>17~26</initialResistanceRange>
    <maxGenerationAge>35</maxGenerationAge>
    <backstoryCategories>
      <li>Outlander</li>
    </backstoryCategories>
    <backstoryCryptosleepCommonality>0.001</backstoryCryptosleepCommonality>
    <chemicalAddictionChance>0.001</chemicalAddictionChance>
    <invNutrition>1</invNutrition>
    <invFoodDef>Pemmican</invFoodDef>
    <itemQuality>Excellent</itemQuality>
    <apparelAllowHeadgearChance>1</apparelAllowHeadgearChance>
    <gearHealthRange>
      <min>0.9</min>
      <max>1.1</max>
    </gearHealthRange>
    <apparelMoney>
      <min>2000</min>
      <max>5000</max>
    </apparelMoney>
    <weaponMoney>
      <min>505</min>
      <max>550</max>
    </weaponMoney>
    <inventoryOptions>
      <skipChance>0.2</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>50</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>5</min>
            <max>15</max>
          </countRange>
        </li>
        <li>
          <choiceChance>50</choiceChance>
          <thingDef>MedicineHerbal</thingDef>
          <countRange>
            <min>1</min>
            <max>3</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>
  <!-- ==================== RWP Marshal Classes ================= -->
  <!-- ==== (Marshal) Gunslinger ==== -->
  <PawnKindDef Name="RWP_Class_Marshal_Gunslinger" ParentName="RWP_Class_MarshalCore">
