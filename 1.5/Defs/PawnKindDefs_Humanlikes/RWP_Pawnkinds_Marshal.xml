    <initialWillRange>2~5</initialWillRange>
    <initialResistanceRange>40~46</initialResistanceRange>
    <minGenerationAge>21</minGenerationAge>
    <maxGenerationAge>35</maxGenerationAge>
    <combatPower>50</combatPower>
    <itemQuality>Good</itemQuality>
    <apparelMoney>
      <min>1000</min>
      <max>3000</max>
    </apparelMoney>
    <weaponMoney>
      <min>1000</min>
      <max>2000</max>
    </weaponMoney>
    <apparelRequired>
      <li>RWP_Apparel_DeputyMarshalBadge</li>
      <li>RWP_Apparel_Chaps</li>
    </apparelRequired>
    <weaponTags>
      <li>RWPRevolver</li>
      <li>Revolver</li>
    </weaponTags>
    <apparelTags>
      <li>RWPMarshalWear</li>
    </apparelTags>
  </PawnKindDef>
