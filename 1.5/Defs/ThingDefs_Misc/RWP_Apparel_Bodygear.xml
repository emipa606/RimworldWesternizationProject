<Defs>
  <!-- APRONS -->
  <!--Surgeon's Apron-->
  <ThingDef ParentName="ApparelloVanillaBase">
    <defName>RWP_Apparel_MedicalApron</defName>
    <label>surgeon's apron</label>
    <description>Pocketed apron intended for sterile medical work.</description>
    <recipeMaker>
      <researchPrerequisite>RWP_WesternApparel</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Bodywear/Display/SurgeonApron</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <!-- SHUT MY MOUTH AND SLAP MY GRANDMA! IT SUPPORTS STUFF!! -->
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>80</costStuffCount>
    <costList>
      <MedicineIndustrial>3</MedicineIndustrial>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <Mass>0.10</Mass>
      <MarketValue>400</MarketValue>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MedicalTendQuality>0.10</MedicalTendQuality>
      <MedicalSurgerySuccessChance>0.05</MedicalSurgerySuccessChance>
    </equippedStatOffsets>
    <generateCommonality>1</generateCommonality>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Bodywear/ApronSurgeon/Apron</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>Doctor</li>
        <!-- Cross-compatibility with other Mods -->
        <li>CallOfCthulhu_TownsfolkNurse</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>20</weight>
          <only>RGBA(0.3,0.8,0.6,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
