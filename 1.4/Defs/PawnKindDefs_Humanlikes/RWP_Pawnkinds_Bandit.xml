<Defs>
  <!-- ==================== RWP Faction Classes ================= -->
  <!-- ==== (Class) Bandit Core ==== -->
  <PawnKindDef Name="RWP_Class_BanditCore" Abstract="True">
    <race>Human</race>
    <defaultFactionType>RWP_Faction_Bandit</defaultFactionType>
    <combatPower>35</combatPower>
    <initialWillRange>1~3</initialWillRange>
    <initialResistanceRange>10~16</initialResistanceRange>
    <maxGenerationAge>35</maxGenerationAge>
    <backstoryCategories>
      <li>Outsider</li>
      <li>Pirate</li>
    </backstoryCategories>
    <backstoryCryptosleepCommonality>0.01</backstoryCryptosleepCommonality>
    <chemicalAddictionChance>0.2</chemicalAddictionChance>
    <invNutrition>1</invNutrition>
    <invFoodDef>Pemmican</invFoodDef>
    <itemQuality>Normal</itemQuality>
    <apparelAllowHeadgearChance>0.75</apparelAllowHeadgearChance>
    <gearHealthRange>
      <min>0.75</min>
      <max>1.1</max>
    </gearHealthRange>
    <apparelMoney>
      <min>350</min>
      <max>800</max>
    </apparelMoney>
    <weaponMoney>
      <min>505</min>
      <max>650</max>
    </weaponMoney>
    <inventoryOptions>
      <skipChance>0.1</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>50</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>5</min>
            <max>15</max>
          </countRange>
        </li>
        <li>
          <choiceChance>50</choiceChance>
          <thingDef>MedicineHerbal</thingDef>
          <countRange>
            <min>1</min>
            <max>1</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>
