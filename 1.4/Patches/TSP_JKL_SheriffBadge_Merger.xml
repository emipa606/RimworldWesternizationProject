			<success>Always</success>
			<xpath>/Defs/ThingDef[defName="JKL_Apparel_SheriffBadge"]/apparel/layers</xpath>
			<value>
				<layers Inherit="False">
					<li>Belt</li>
				</layers>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. All according to plan. -->
	</Operation>
	
