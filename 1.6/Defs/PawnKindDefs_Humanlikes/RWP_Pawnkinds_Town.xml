<Defs>
  <!-- ==================== RWP Town Faction  ================= -->
  <!-- ==== (Class) Town Core ==== -->
  <PawnKindDef Name="RWP_Class_TownCore" Abstract="True">
    <race>Human</race>
    <defaultFactionType>RWP_Faction_Town</defaultFactionType>
    <combatPower>35</combatPower>
    <initialWillRange>1~2</initialWillRange>
    <initialResistanceRange>4~8</initialResistanceRange>
    <backstoryCategories>
      <li>Outlander</li>
    </backstoryCategories>
    <backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
    <chemicalAddictionChance>0.05</chemicalAddictionChance>
    <invNutrition>1</invNutrition>
    <invFoodDef>Pemmican</invFoodDef>
    <itemQuality>Normal</itemQuality>
    <apparelAllowHeadgearChance>0.75</apparelAllowHeadgearChance>
    <gearHealthRange>
      <min>0.75</min>
      <max>1.1</max>
    </gearHealthRange>
    <apparelMoney>
      <min>350</min>
      <max>800</max>
    </apparelMoney>
    <weaponMoney>
      <min>505</min>
      <max>600</max>
    </weaponMoney>
    <inventoryOptions>
      <skipChance>0.6</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>50</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>5</min>
            <max>15</max>
          </countRange>
        </li>
        <li>
          <choiceChance>50</choiceChance>
          <thingDef>MedicineHerbal</thingDef>
          <countRange>
            <min>1</min>
            <max>1</max>
          </countRange>
        </li>
        <li>
          <choiceChance>50</choiceChance>
          <thingDef>Beer</thingDef>
          <countRange>
            <min>1</min>
            <max>4</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>
